{
  "name": "@chansee97/lint-config-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.1.1",
  "author": {
    "name": "chansee97",
    "email": "chen.dev@foxmail.com",
    "url": "https://github.com/chansee97"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --fix",
    "update-version": "bumpp -r",
    "publish": "pnpm -r publish --access public",
    "release": "pnpm update-version && pnpm publish"
  },
  "devDependencies": {
    "@chansee97/commitlint-config": "workspace:*",
    "@chansee97/eslint-config-vue": "workspace:*",
    "@commitlint/cli": "^17.6.1",
    "bumpp": "^9.1.0",
    "eslint": "^8.38.0",
    "lint-staged": "^13.2.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit $HUSKY_GIT_PARAMS ",
    "pre-commit": "pnpm lint-staged && git add ."
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint . --fix"
  }
}
